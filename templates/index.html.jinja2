<!DOCTYPE html>
{% from 'bootstrap5/utils.html' import render_icon %}
<html lang="zh-CN">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>图片透视校正工具</title>
    {{ bootstrap.load_css() }}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
</head>

<body class="d-flex flex-column min-vh-100">
    <div class="container-fluid py-4 flex-grow-1" style="position: relative;">
        <!-- GitHub Link -->
        <a href="https://github.com/aflyhorse/scanimage" target="_blank" class="github-link"
            aria-label="View source on GitHub">
            {{ render_icon('github', size='2em') }}
        </a>
        
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mb-4">图片透视校正工具</h1>
            </div>
        </div>

        <!-- Step 1: Upload Image -->
        <div class="row mb-4" id="upload-section">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">步骤 1: 上传图片</h5>
                    </div>
                    <div class="card-body">
                        <form id="upload-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <input type="file" class="form-control" id="image-input" accept="image/*" required>
                                <div class="form-text">支持 PNG, JPG, JPEG, GIF, BMP 格式</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">输出模式:</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="colorMode" id="color-mode"
                                        value="color" checked>
                                    <label class="form-check-label" for="color-mode">
                                        彩色 (自动调色和白平衡)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="colorMode" id="grayscale-mode"
                                        value="grayscale">
                                    <label class="form-check-label" for="grayscale-mode">
                                        黑白 (高对比度，近白色底色)
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">上传图片</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Step 2: Select Area -->
        <div class="row mb-4 d-none" id="selection-section">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">步骤 2: 选择梯形区域</h5>
                        <small class="text-muted">点击图片添加角点，拖拽调整位置（需要4个角点）</small>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <canvas id="image-canvas"
                                style="max-width: 100%; border: 2px solid #dee2e6; cursor: crosshair;"></canvas>
                        </div>
                        <div class="text-center">
                            <button id="process-btn" class="btn btn-success me-2" disabled>
                                {{ render_icon('gear') }} 开始处理
                            </button>
                            <button id="reset-selection" class="btn btn-secondary">
                                {{ render_icon('arrow-clockwise') }} 重置选择
                            </button>
                        </div>
                        <div class="text-center mt-3">
                            <button id="start-over-step2" class="btn btn-link">
                                {{ render_icon('arrow-left') }} 重新开始
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Step 3: Result -->
        <div class="row mb-4 d-none" id="result-section">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">步骤 3: 处理结果</h5>
                        <button id="back-to-step2" class="btn btn-outline-secondary btn-sm">
                            {{ render_icon('arrow-left') }} 调整裁剪区域
                        </button>
                    </div>
                    <div class="card-body">
                        <!-- 处理选项切换 -->
                        <div class="mb-3" id="processing-options">
                            <h6 class="mb-2">处理选项：</h6>
                            
                            <!-- 彩色图片选项 -->
                            <div id="color-processing-options" class="d-none">
                                <div class="btn-group" role="group" aria-label="彩色处理选项">
                                    <input type="radio" class="btn-check" name="colorProcessing" id="color-original" value="original">
                                    <label class="btn btn-outline-primary" for="color-original">原色彩</label>
                                    
                                    <input type="radio" class="btn-check" name="colorProcessing" id="color-adjusted" value="adjusted" checked>
                                    <label class="btn btn-outline-secondary" for="color-adjusted">自动调色</label>
                                    
                                    <input type="radio" class="btn-check" name="colorProcessing" id="color-enhanced" value="enhanced">
                                    <label class="btn btn-outline-warning" for="color-enhanced">暴力上色</label>
                                </div>
                                <div class="form-text">原色彩：仅做透视矫正和适当亮度调整；自动调色：进行色彩和白平衡调整；暴力上色：开启均衡化的强化处理</div>
                            </div>
                            
                            <!-- 黑白图片选项 -->
                            <div id="grayscale-processing-options" class="d-none">
                                <div class="mb-2">
                                    <div class="btn-group" role="group" aria-label="黑白处理选项">
                                        <input type="radio" class="btn-check" name="grayscaleProcessing" id="grayscale-minimal" value="minimal">
                                        <label class="btn btn-outline-secondary" for="grayscale-minimal">仅转换</label>
                                        
                                        <input type="radio" class="btn-check" name="grayscaleProcessing" id="grayscale-standard" value="standard" checked>
                                        <label class="btn btn-outline-primary" for="grayscale-standard">标准</label>
                                        
                                        <input type="radio" class="btn-check" name="grayscaleProcessing" id="grayscale-more" value="more">
                                        <label class="btn btn-outline-info" for="grayscale-more">较多细节</label>
                                        
                                        <input type="radio" class="btn-check" name="grayscaleProcessing" id="grayscale-most" value="most">
                                        <label class="btn btn-outline-success" for="grayscale-most">更多细节</label>
                                        
                                        <input type="radio" class="btn-check" name="grayscaleProcessing" id="grayscale-extreme" value="extreme">
                                        <label class="btn btn-outline-warning" for="grayscale-extreme">暴力细节</label>
                                        
                                        <input type="radio" class="btn-check" name="grayscaleProcessing" id="grayscale-silhouette" value="silhouette">
                                        <label class="btn btn-outline-dark" for="grayscale-silhouette">极简剪影</label>
                                    </div>
                                </div>
                                <div class="form-text">
                                    <span id="grayscale-description">标准：未经均衡化的处理，保持原始层次</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-center mb-3 position-relative">
                            <img id="result-image" class="img-fluid"
                                style="max-height: 600px; border: 2px solid #dee2e6;">
                            <!-- 结果图片Loading层 -->
                            <div id="result-loading" class="d-none position-absolute top-50 start-50 translate-middle">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="spinner-border text-primary mb-2" role="status">
                                        <span class="visually-hidden">处理中...</span>
                                    </div>
                                    <small class="text-muted">处理中，请稍候...</small>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button id="rotate-left" class="btn btn-outline-primary me-2">
                                {{ render_icon('arrow-counterclockwise') }} 向左旋转
                            </button>
                            <button id="rotate-right" class="btn btn-outline-primary me-2">
                                {{ render_icon('arrow-clockwise') }} 向右旋转
                            </button>
                            <button id="download-btn" class="btn btn-success">
                                {{ render_icon('download') }} 下载图片
                            </button>
                        </div>
                        
                        <!-- 色彩模式切换按钮 -->
                        <div class="text-center mt-3">
                            <div class="btn-group" role="group" aria-label="色彩模式切换">
                                <button id="switch-to-color" class="btn btn-outline-info" data-mode="color">
                                    {{ render_icon('palette') }} 彩色模式
                                </button>
                                <button id="switch-to-grayscale" class="btn btn-outline-secondary" data-mode="grayscale">
                                    {{ render_icon('circle-half') }} 黑白模式
                                </button>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <button id="adjust-crop-bottom" class="btn btn-link me-3">
                                {{ render_icon('crop') }} 调整裁剪区域
                            </button>
                            <button id="start-over" class="btn btn-link">
                                {{ render_icon('arrow-left') }} 重新开始
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Loading Spinner -->
        <div class="d-none" id="loading-spinner">
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">处理中...</span>
                </div>
                <p class="mt-2">正在处理图片，请稍候...</p>
            </div>
        </div>

        <!-- Error Messages -->
        <div id="error-container"></div>
    </div>

    <!-- Footer -->
    {% if footer_text %}
    <footer class="footer mt-auto">
        <div class="container">
            <div class="text-center">
                {{ footer_text|safe }}
            </div>
        </div>
    </footer>
    {% endif %}

    {{ bootstrap.load_js() }}
    <script>
        // set base API path for subdirectory deployment
        window.API_BASE = '{{ request.script_root or "" }}';
        console.log('API Base Path:', window.API_BASE);
    </script>
    <script src="{{ static_url('js/app.js') }}"></script>
</body>

</html>