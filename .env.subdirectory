# 子目录部署环境变量配置
# 复制此文件为 .env 用于子目录部署

# Flask应用配置
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-very-secret-key-here-change-this-in-production

# 子目录部署配置
SCRIPT_NAME=/scanimage

# 服务器配置
HOST=127.0.0.1
PORT=7788
WORKERS=4

# 文件上传配置
# 16MB in bytes
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/scanimage.log

# 安全配置 (生产环境)
# 在HTTPS环境下设置为True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Footer配置
FOOTER_TEXT=© 2025 ScanImage. | <a href="https://beian.miit.gov.cn/" target="_blank" rel="nofollow">备案号</a>