# 环境变量配置文件
# 复制此文件为 .env 并根据实际情况修改配置

# Flask应用配置
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-very-secret-key-here-change-this-in-production

# 子目录部署配置
# 如果部署在根目录，保持为空或注释掉
# 如果部署在子目录（如 /scanimage），设置为子路径
SCRIPT_NAME=

# 服务器配置
HOST=127.0.0.1
PORT=7788
WORKERS=4

# 文件上传配置
# 最大上传文件大小：20MB = 20 * 1024 * 1024 / 0.95 = 22075285 字节
MAX_CONTENT_LENGTH=22075285
UPLOAD_FOLDER=uploads
PROCESSED_FOLDER=processed

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=scanimage.log

# 安全配置 (生产环境)
# 在HTTPS环境下设置为True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Footer配置
FOOTER_TEXT=© 2025 ScanImage. | <a href="https://beian.miit.gov.cn/" target="_blank" rel="nofollow">备案号</a>

# 数据库配置 (如果将来需要)
# DATABASE_URL=sqlite:///scanimage.db

# Redis配置 (如果将来需要缓存)
# REDIS_URL=redis://localhost:6379/0